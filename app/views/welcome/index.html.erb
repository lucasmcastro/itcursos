
<div class="row">
  <% @courses.each_slice(2).each do |course_pair| %>
    <div class="span3">
    <% course_pair.each do |course| %>
        <div class="tile <%= course.color %>" data-href=<%= course.url %>>
          <div class="tile-header-wrap">
            <p class="tile-header">
              <a class="tile-link" href="<%= course.url %>"><%= course.title %></a>
            </p>
          </div><!--/.tile-header-wrap -->
          <p class="tile-content"><%= course.content %></p>
          <p class="tile-footer">parcelas de R$<%= course.price %></p>
        </div><!--/.<%= course.color %> -->
    <% end %>
    </div><!--/.span3 -->
  <% end %>
<div class="container body space">
  <div class="row">
    <div class="span4">
      <h2>Blog da IT</h2>
      <hr />
      <% @news_feed.entries[0,4].each do |entry| %>
        <p class="article"><a href="<%= entry.url %>"><%= entry.title %></a></p>
        <p class="muted">Em <%= entry.published %> por <%= entry.author %></p>
      <% end %>
    </div><!--/.span4 -->
    <div class="span4">
      <h2>Oportunidades</h2>
      <hr />
      <% @jobs_feed.entries[0,4].each do |entry| %>
        <p class="article"><a href="<%= entry.url %>"><%= entry.title %></a></p>
        <p class="muted">em <%= entry.published %></p>
      <% end %>
    </div><!--/.span4 -->
    <div class="span4">
      <h2>Depoimentos</h2>
      <hr />
