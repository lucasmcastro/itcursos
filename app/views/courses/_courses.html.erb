<% if courses.empty? %>
<p>Não existem cursos deste tipo.</p>
<% else %>

<table class='list'>
  <tr>
    <th>Nome</th>
    <th>Duração</th>
    <th>Créditos</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% courses.each do |course| %>
  <tr>
    <td class='first'><%= course.name %></td>
    <td><%= course.duration %></td>
    <td><%= course.credits %></td>
    <td><%= link_to 'Promotion', promotion_link(course) %></td>
    <td><%= link_to 'Template', template_link(course) %></td>
    <td><%= link_to 'Alterar', edit_course_path(course) %></td>
    <td><%= link_to 'Remover', course, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<% end %>
